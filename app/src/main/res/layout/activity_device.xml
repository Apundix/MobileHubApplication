<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login">

    <ImageView
        android:id="@+id/eagle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:src="@drawable/eagle" />

    <EditText
        android:id="@+id/titleDevice"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/eagle"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/edit_background"
        android:hint="Device Name"
        android:paddingLeft="13dp" />

    <EditText
        android:id="@+id/ipText"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/titleDevice"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/edit_background"
        android:hint="User IP"
        android:paddingLeft="13dp" />

    <EditText
        android:id="@+id/macText"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/ipText"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/edit_background"
        android:hint="Mac Address"
        android:paddingLeft="13dp" />


    <Button
        android:id="@+id/Wake"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/macText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/btn_background"
        android:text="Wake Device"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Delete"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Wake"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/btn_background"
        android:text="Delete"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:minHeight="?actionBarSize"
        android:theme="?actionBarTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/historyClick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_baseline_history_24" />

        <TextView
            android:id="@+id/Save"
            android:layout_width="67dp"
            android:layout_height="35dp"
            android:paddingTop="3dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_gravity="right"

            android:paddingRight="5dp"
            android:src="@drawable/ic_baseline_add_24"
            android:text="Save"
            android:textColor="@color/white" />

    </androidx.appcompat.widget.Toolbar>







</RelativeLayout>